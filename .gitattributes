# Unreal Engine file types.
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap filter=lfs diff=lfs merge=lfs -text
# Raw Content file types.
*.fbx filter=lfs diff=lfs merge=lfs -text
*.3ds filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.xcf filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
# Anything in `/RawContent` dir.
/RawContent/**/* filter=lfs diff=lfs merge=lfs -text
Binaries/Win64/BlackBoxTurret.exe filter=lfs diff=lfs merge=lfs -text

# 插件大文件 LFS 规则（仅二进制文件）
Plugins/**/ThirdParty/**/*.a filter=lfs diff=lfs merge=lfs -text
Plugins/**/ThirdParty/**/*.lib filter=lfs diff=lfs merge=lfs -text
Plugins/**/ThirdParty/**/*.dll filter=lfs diff=lfs merge=lfs -text
Plugins/**/ThirdParty/**/*.so filter=lfs diff=lfs merge=lfs -text
Plugins/**/ThirdParty/**/*.dylib filter=lfs diff=lfs merge=lfs -text

# NoesisGUI SDK 运行时库（所有平台）
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Bin/**/*.dll filter=lfs diff=lfs merge=lfs -text
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Bin/**/*.so filter=lfs diff=lfs merge=lfs -text
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Bin/**/*.dylib filter=lfs diff=lfs merge=lfs -text
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Bin/**/*.a filter=lfs diff=lfs merge=lfs -text
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Lib/**/*.lib filter=lfs diff=lfs merge=lfs -text
Plugins/NoesisGUI/Source/Noesis/NoesisSDK/Lib/**/*.a filter=lfs diff=lfs merge=lfs -text

# 编辑器 DLL（已在版本控制中）
Binaries/**/*.dll filter=lfs diff=lfs merge=lfs -text
Plugins/**/Binaries/**/*.dll filter=lfs diff=lfs merge=lfs -text
# 排除：.csproj 等文本文件不应使用 LFS
*.csproj -filter -diff -merge text
*.h !text !filter !merge !diff
*.hpp !text !filter !merge !diff
*.c !text !filter !merge !diff
*.cpp !text !filter !merge !diff
*.cs !text !filter !merge !diff
*.js !text !filter !merge !diff
*.json !text !filter !merge !diff
*.txt !text !filter !merge !diff
*.md !text !filter !merge !diff
*.ini !text !filter !merge !diff
*.xml !text !filter !merge !diff
*.Build.cs !text !filter !merge !diff
*.uplugin !text !filter !merge !diff
*.ipp !text !filter !merge !diff
